<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rain.timelineview.MainActivity">

    <com.rain.timelineview.views.TimeLineView
        android:id="@+id/time1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.rain.timelineview.views.TimeLineView>

    <com.rain.timelineview.views.TimeLineView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time1"
        android:layout_marginTop="20dp">

    </com.rain.timelineview.views.TimeLineView>


    <com.rain.timelineview.views.TimeSelectionBar
        android:id="@+id/time_select_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/time_select_bar"
        android:layout_alignLeft="@+id/time_select_bar"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/time_select_bar"
        android:layout_alignRight="@id/time_select_bar"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/time_select_bar"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />
</RelativeLayout>
